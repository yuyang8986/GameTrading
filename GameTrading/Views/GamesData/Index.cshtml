@model IEnumerable<GameTrading.Models.GamesData>
@using GameTrading.Helpers;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @*(Display Name, Action Method)*@
    @Html.ActionLink("Create New", "Create")
</p>


@using (Html.BeginForm("Search", "GamesData"))
{
    @Html.Editor("SearchBox")
    <input type="submit" value="Search" />
}
<table class="table">
    <tr>
        <th>
           Game Name:
            @*@Html.DisplayNameFor(model => model.GameName)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Platform):
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @Html.Truncate(item.GameName, 20)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Platform)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GameID }) |
            @Html.ActionLink("Details", "Details", new { id=item.GameID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GameID })
        </td>
    </tr>
}

</table>
